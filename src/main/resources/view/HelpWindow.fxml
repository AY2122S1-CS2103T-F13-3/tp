<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.stage.Stage?>

<fx:root resizable="false" title="Help" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/help_icon.png" />
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@Fonts.css" />
        <URL value="@HelpWindow.css" />
      </stylesheets>
         <AnchorPane prefHeight="589.0" prefWidth="549.0">
            <children>
               <TableView fx:id="table" fixedCellSize="0.0" layoutY="-1.0" prefHeight="527.0" prefWidth="552.0">
                 <columns>
                   <TableColumn fx:id="action" prefWidth="111.0" reorderable="false" text="Action" />
                   <TableColumn fx:id="format" prefWidth="215.0" reorderable="false" text="Format" />
                     <TableColumn fx:id="example" prefWidth="225.0" reorderable="false" text="Example" />
                 </columns>
                  <opaqueInsets>
                     <Insets />
                  </opaqueInsets>
               </TableView>
      
            <HBox alignment="CENTER" layoutY="525.0" prefHeight="64.0" prefWidth="551.0" style="-fx-background-color: D3DAFB50;">
              <children>
                <Label fx:id="helpMessage" text="Label" textFill="#424874" wrapText="true" HBox.hgrow="ALWAYS">
                    <padding>
                       <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                    </padding>
                </Label>
                <Button fx:id="copyButton" mnemonicParsing="false" onAction="#copyUrl" text="Copy URL" textFill="WHITE" wrapText="true">
                        <font>
                           <Font name="Open Sans SemiBold" size="13.0" />
                        </font>
                        <opaqueInsets>
                           <Insets />
                        </opaqueInsets>
                        <HBox.margin>
                           <Insets left="15.0" />
                        </HBox.margin>
                        <padding>
                           <Insets bottom="7.0" left="12.0" right="12.0" top="7.0" />
                        </padding></Button>
              </children>
              <opaqueInsets>
                <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
              </opaqueInsets>
              <padding>
                <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
              </padding>
            </HBox>
            </children>
         </AnchorPane>
    </Scene>
  </scene>
</fx:root>
