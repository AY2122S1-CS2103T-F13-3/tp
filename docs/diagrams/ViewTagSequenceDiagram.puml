@startuml
!include style.puml

box Ui UI_COLOR_T1
participant ":MainWindow" as MainWindow UI_COLOR
participant ":CenterPanel" as CenterPanel UI_COLOR
end box

box Logic LOGIC_COLOR_T1
participant "logic:Logic" as Logic LOGIC_COLOR
participant "addressBookParser:AddressBookParser" as AddressBookParser LOGIC_COLOR
participant "command:TagCommand" as TagCommand LOGIC_COLOR
participant "command:TagCommand" as TagCommand LOGIC_COLOR
participant ":CommandResult" as CommandResult LOGIC_COLOR
end box

[-> MainWindow : executeCommand("tag")
activate MainWindow

MainWindow -> Logic : execute("tag")
activate Logic

Logic -> AddressBookParser : parseCommand("tag")
activate AddressBookParser

create TagCommand
AddressBookParser -> TagCommand
activate TagCommand

TagCommand --> AddressBookParser : command
deactivate TagCommand

AddressBookParser --> Logic : command
deactivate AddressBookParser

Logic -> TagCommand : execute()
activate TagCommand

create CommandResult
TagCommand -> CommandResult
activate CommandResult

CommandResult --> TagCommand : commandResult
deactivate CommandResult

'Hidden arrow to position the destroy marker below the end of the activation bar.
CommandResult -[hidden]-> AddressBookParser
destroy CommandResult

TagCommand --> Logic : commandResult
deactivate TagCommand

'Hidden arrow to position the destroy marker below the end of the activation bar.
TagCommand -[hidden]-> Logic
destroy TagCommand

Logic --> MainWindow : commandResult
deactivate Logic

'Hidden arrow to position the destroy marker below the end of the activation bar.
Logic -[hidden]-> MainWindow
destroy Logic

MainWindow -> MainWindow : handleShowTagList()
activate MainWindow

MainWindow -> CenterPanel : displayTagListPanel()
activate CenterPanel

CenterPanel --> MainWindow
deactivate CenterPanel

MainWindow --> MainWindow
deactivate MainWindow

[<-- MainWindow
deactivate MainWindow


@enduml
