@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor UI_COLOR_T4
skinparam classBackgroundColor UI_COLOR

package UI <<Rectangle>>{
Interface Ui <<Interface>>
Class "{abstract}\nUiPart" as UiPart
Class UiManager
Class MainWindow
Class ResultDisplay
Class CenterPanel
Class SchedulePanel
Class PersonListPanel
Class PersonCard
Class TagListPanel
Class TagCard
Class StatusBarFooter
Class CommandBox
Class ExternalWindow
Class HelpWindow
Class ReminderWindow
Class ReminderLessonCard
}

package Model <<Rectangle>> {
Class HiddenModel #FFFFFF
}

package Logic <<Rectangle>> {
Class HiddenLogic #FFFFFF
}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Ui

UiManager .left.|> Ui
UiManager -down-> "1" MainWindow
MainWindow *-down->  "1" CommandBox
MainWindow *-down-> "1" ResultDisplay
MainWindow *-down-> "1" CenterPanel
MainWindow *-down-> "1" StatusBarFooter
MainWindow -down-> "0..1" HelpWindow
MainWindow -down-> "0..1" ReminderWindow

CenterPanel *-down-> "1" PersonListPanel
CenterPanel *-down-> "1" SchedulePanel
CenterPanel *-down-> "1" TagListPanel

PersonListPanel -down-> "*" PersonCard
TagListPanel -down-> "*" TagCard
ReminderWindow -down-> "*" ReminderLessonCard

MainWindow -left-|> UiPart

ResultDisplay --|> UiPart
CommandBox --|> UiPart
CenterPanel --|> UiPart
SchedulePanel --|> UiPart
PersonListPanel --|> UiPart
PersonCard --|> UiPart
TagListPanel --|> UiPart
TagCard --|> UiPart
ReminderLessonCard --|> UiPart
StatusBarFooter --|> UiPart
ExternalWindow --|> UiPart
HelpWindow --|> ExternalWindow
ReminderWindow --|> ExternalWindow

PersonCard ..> Model
SchedulePanel ..> Model
UiManager -right-> Logic
MainWindow -left-> Logic

CenterPanel -[hidden]left- HelpWindow
HelpWindow -[hidden]left- CommandBox
CommandBox -[hidden]left- ResultDisplay
ResultDisplay -[hidden]left- StatusBarFooter
ReminderLessonCard -[hidden]left- ExternalWindow

MainWindow -[hidden]-|> UiPart
@enduml
